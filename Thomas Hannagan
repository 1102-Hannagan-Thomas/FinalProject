#include <stdlib.h>
#include <string.h>

typedef struct {
    int id;
    char name[50];
    float grade;
} Student;

// Function Declarations
void addStudent();
void deleteStudent();
void updateStudent();
void displayAllStudents();
void searchStudent();
int menu();

// Main function
int main() {
    int choice;
    while(1) {
        choice = menu();
        switch(choice) {
            case 1:
                addStudent();
                break;
            case 2:
                deleteStudent();
                break;
            case 3:
                updateStudent();
                break;
            case 4:
                displayAllStudents();
                break;
            case 5:
                searchStudent();
                break;
            case 6:
                printf("Exiting program...\n");
                exit(0);
            default:
                printf("Invalid choice. Please try again.\n");
        }
    }
    return 0;
}

